

; infomation about boot

CYLS EQU 0X0FF0
LEDS EQU 0X0FF1
VMODE EQU 0X0FF2
SCRNX EQU 0X0FF4
SCRNY EQU 0X0FF6
VRAM EQU 0X0FF8


ORG 0xc200
MOV AL,0x13
MOV AH,0x00
INT 0x10
MOV BYTE [VMODE],8
MOV WORD [SCRNX],320
MOV WORD [SCRNY],200
MOV DWORD [VRAM],0x000a0000

; get the keyboard leds status
MOV AH,0x02
INT 0x16
MOV [LEDS],AL

fin:
	HLT
	JMP fin
